const customers = [
  {
    name: "Multiplas",
    logo: "/assets/medias/index/customers/multiplas.png",
  },
  {
    name: "Mantiqueira",
    logo: "/assets/medias/index/customers/mantiqueira.png",
  },
  {
    name: "Polar",
    logo: "/assets/medias/index/customers/polar.png",
  },
  {
    name: "Bold",
    logo: "/assets/medias/index/customers/bold.png",
  },
  {
    name: "Casas Pedro",
    logo: "/assets/medias/index/customers/casas.png",
  },
  {
    name: "Vidaveg",
    logo: "/assets/medias/index/customers/vidaveg.png",
  },
  // {
