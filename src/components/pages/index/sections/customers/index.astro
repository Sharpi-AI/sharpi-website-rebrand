  //   logo: "/assets/medias/index/customers/organicos.png",
  // },
];
---

<section id="customers" class="overflow-x-hidden py-10 mt-20 px-4 md:px-0">
  <div class="container mx-auto">
    <h2
      class="text-sm font-normal text-center leading-none text-[#969696] tracking-tight"
    >
      Times de venda avan√ßados que confiam na Sharpi:
    </h2>
    <ul class="flex flex-wrap md:flex-nowrap gap-4 items-center justify-center">
      {
        customers.map((customer) => (
          <li class="flex-1/3">
            <div class="flex items-center justify-center md:px-8 grayscale hover:grayscale-0 transition-all duration-300">
              <div class=" rounded-lg md:px-4 py-4 w-full max-w-[120px] md:max-w-[280px] flex items-center justify-center">
                <img
                  class="w-full h-full object-contain"
                  src={customer.logo}
                  alt={customer.name}
                />
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
