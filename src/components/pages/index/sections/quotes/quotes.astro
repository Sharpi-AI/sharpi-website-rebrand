---
import ForwardArrowIcon from "@/components/icons/forward-arrow.astro";
import CloseIcon from "@/components/icons/close.astro";
---

<div
  class="relative w-full h-full rounded-[20px] overflow-hidden bg-gradient-to-r from-[#f5f5f5] to-[#f5f5f5]"
  id="quotes-container"
>
  <!-- Background with subtle pattern -->
  <div
    class="absolute inset-0 pointer-events-none"
    aria-hidden="true"
    style="background-image: linear-gradient(90deg, rgb(198, 211, 215) 0%, rgb(198, 211, 215) 100%); opacity: 0.1;"
  >
  </div>

  <!-- Main Content -->
  <div
    class="relative w-full h-full flex flex-col md:flex-row gap-4 md:gap-0 items-center justify-center p-4 md:p-8"
  >
    <!-- Left Panel: Message List -->
    <div
      class="absolute left-[55px] top-[156px] w-[430px] hidden md:flex flex-col gap-[6px] items-end"
    >
      <!-- Message 1: Long request -->
      <div
        class="bg-white border-[0.5px] border-[rgba(0,0,0,0.12)] rounded-lg px-4 py-3 flex items-center justify-between h-[40px] w-[328px]"
      >
        <p
          class="text-[11px] text-[#343434] tracking-[-0.22px] leading-[0.9]"
        >
          Me mande o preço desses produtos, por favor
        </p>
        <div class="relative shrink-0 size-3">
          <svg viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="1" y="1" width="10" height="10" rx="1" stroke="#8679FF" stroke-width="0.5" />
          </svg>
        </div>
      </div>

      <!-- Message 2: Rice -->
      <div
        class="bg-white border-[0.5px] border-[rgba(0,0,0,0.12)] rounded-lg px-4 py-3 flex items-center justify-between h-[40px] w-[268px]"
      >
        <p
          class="text-[11px] text-[#343434] tracking-[-0.22px] leading-[0.9]"
        >
          12kg de arroz para risoto
        </p>
        <div class="relative shrink-0 size-3">
          <svg viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="1" y="1" width="10" height="10" rx="1" stroke="#8679FF" stroke-width="0.5" />
          </svg>
        </div>
      </div>

      <!-- Message 3: Castanha -->
      <div
        class="bg-white border-[0.5px] border-[rgba(0,0,0,0.12)] rounded-lg px-4 py-3 flex items-center justify-between h-[40px] w-[268px]"
      >
        <p
          class="text-[11px] text-[#343434] tracking-[-0.22px] leading-[0.9]"
        >
          Castanha do Pará
        </p>
        <div class="relative shrink-0 size-3">
          <svg viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="1" y="1" width="10" height="10" rx="1" stroke="#8679FF" stroke-width="0.5" />
          </svg>
        </div>
      </div>

      <!-- Message 4: Detergente + User Info -->
      <div class="flex flex-col gap-2 items-end">
        <div
          class="bg-white border-[0.5px] border-[rgba(0,0,0,0.12)] rounded-lg px-4 py-3 flex items-center justify-between h-[40px] w-[268px]"
        >
          <p
            class="text-[11px] text-[#343434] tracking-[-0.22px] leading-[0.9]"
          >
            Detergente Neutro
          </p>
          <div class="relative shrink-0 size-3">
            <svg viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="1" y="1" width="10" height="10" rx="1" stroke="#8679FF" stroke-width="0.5" />
            </svg>
          </div>
        </div>

        <!-- User Info -->
        <div class="flex gap-1 items-center px-4">
          <div class="size-4 rounded-full overflow-hidden shrink-0 bg-gray-300">
            <img
              src="/assets/medias/index/how-to/products/avatar-user.png"
              alt="Fernando Arão"
              class="w-full h-full object-cover"
            />
          </div>
          <span
            class="text-[9px] text-[#3a3a3a] tracking-[-0.18px] leading-[1.33] whitespace-nowrap"
          >
            Fernando Arão
          </span>
          <span
            class="text-[9px] text-[#747474] tracking-[-0.18px] leading-[1.33]"
          >
            1 min atrás
          </span>
        </div>
      </div>
    </div>

    <!-- Central Area: Price List + Video Animation -->
    <div
      class="absolute left-[480px] top-[172px] w-[370px] h-[145px] hidden md:block"
    >
      <!-- Placeholder for Price List SVG/Image or actual table -->
      <div class="relative w-full h-full">
        <!-- Central Video Animation -->
        <div
          class="absolute left-[145px] top-[36px] w-[76px] h-[73px]"
        >
          <div class="aspect-square mix-blend-multiply relative w-full h-full rounded-full overflow-hidden bg-[#8679ff]/10 flex items-center justify-center">
            <video
              autoplay
              loop
              muted
              playsinline
              class="w-full h-full object-cover"
            >
              <source src="/assets/medias/index/quotes/quotes.mp4" type="video/mp4" />
            </video>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Panel: Quote Card + Action Card -->
    <div
      class="absolute right-0 top-1/2 -translate-y-1/2 flex items-center gap-6"
    >
      <!-- Quote PDF Card -->
      <div
        class="bg-[#d5e5ff] h-[303px] w-[229px] rounded-[12px] shadow-[0px_0px_20px_0px_rgba(0,0,0,0.05)] relative"
      >
        <!-- Close Icon -->
        <div class="absolute right-3 top-3 size-2">
          <CloseIcon size={8} color="#3a3939" />
        </div>

        <!-- Header -->
        <div
          class="absolute left-[17px] top-[28px] -translate-y-1/2 font-medium text-[14px] text-[#3a3939] tracking-[-0.28px] leading-5"
        >
          Orçamento
        </div>

        <!-- Separator Line -->
        <div class="absolute left-[17px] right-[17px] top-[138px] h-[0.6px] bg-[rgba(0,0,0,0.12)]"></div>

        <!-- Supplier Name -->
        <div
          class="absolute left-[17px] top-[124.5px] -translate-y-1/2 font-medium text-[10px] text-[#3a3a3a] tracking-[-0.2px]"
        >
          Mantiqueira Foods
        </div>

        <!-- Product List -->
        <div
          class="absolute left-[17px] right-[17px] top-[150px] flex flex-col gap-[15px]"
        >
          <!-- Product 1: Farinha de Trigo -->
          <div class="flex items-center justify-between">
            <span
              class="text-[8px] text-[#3a3939] tracking-[-0.16px]"
            >
              Farinha de Trigo
            </span>
            <span
              class="text-[8px] text-[#3a3939] tracking-[-0.16px]"
            >
              4 und
            </span>
            <span
              class="text-[8px] text-[#3a3939] tracking-[-0.16px]"
            >
              R$00
            </span>
          </div>

          <!-- Product 2: Ovos Vermelhos -->
          <div class="flex items-center justify-between">
            <span
              class="text-[8px] text-[#3a3939] tracking-[-0.16px]"
            >
              Ovos Vermelhos
            </span>
            <span
              class="text-[8px] text-[#3a3939] tracking-[-0.16px]"
            >
              4 und
            </span>
            <span
              class="text-[8px] text-[#3a3939] tracking-[-0.16px]"
            >
              R$00
            </span>
          </div>

          <!-- Product 3: Manteiga -->
          <div class="flex items-center justify-between">
            <span
              class="text-[8px] text-[#3a3939] tracking-[-0.16px]"
            >
              Manteiga
            </span>
            <span
              class="text-[8px] text-[#3a3939] tracking-[-0.16px]"
            >
              4 und
            </span>
            <span
              class="text-[8px] text-[#3a3939] tracking-[-0.16px]"
            >
              R$00
            </span>
          </div>

          <!-- Product 4: Arroz Árborio -->
          <div class="flex items-center justify-between">
            <span
              class="text-[8px] text-[#3a3939] tracking-[-0.16px]"
            >
              Arroz Árborio
            </span>
            <span
              class="text-[8px] text-[#3a3939] tracking-[-0.16px]"
            >
              4 und
            </span>
            <span
              class="text-[8px] text-[#3a3939] tracking-[-0.16px]"
            >
              R$00
            </span>
          </div>
        </div>

        <!-- Total -->
        <div
          class="absolute bottom-[23px] left-[17px] right-[17px] flex items-end justify-between"
        >
          <span
            class="text-[10px] text-[#3a3939] tracking-[-0.2px]"
          >
            Total:
          </span>
          <span
            class="text-[14px] text-[#3a3939] tracking-[-0.28px] font-medium"
          >
            R$ 190,00
          </span>
        </div>
      </div>

      <!-- Quote Action Card -->
      <div
        class="bg-neutral-50 border-[0.5px] border-[rgba(0,0,0,0.12)] rounded-[16px] p-3 flex flex-col gap-4 items-center w-[113px]"
      >
        <!-- Text Content -->
        <div class="flex flex-col gap-[6px] items-center text-center">
          <span
            class="text-[8px] text-[#8679ff] tracking-[-0.16px] leading-[0.9]"
          >
            Gerado por IA:
          </span>
          <p
            class="text-[12px] text-[#343434] tracking-[-0.24px] leading-[0.9]"
          >
            Seu orçamento está pronto!
          </p>
        </div>

        <!-- Action Button -->
        <button
          class="bg-[#4a2df6] rounded-[6px] px-2 py-[6px] flex items-center justify-center gap-1 w-full hover:bg-[#3d25d1] transition-colors"
        >
          <span
            class="text-[6px] text-white tracking-[-0.12px] leading-[0.9] text-right"
          >
            Enviar para o cliente
          </span>
          <ForwardArrowIcon size={5} color="white" />
        </button>
      </div>
    </div>

  
  </div>
</div>
