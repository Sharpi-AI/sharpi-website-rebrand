---
interface Props {
  class?: string;
  size?: number;
  color?: string;
}

const { class: className, size = 8, color = "currentColor" } = Astro.props;
---

<svg
  class={className}
  width={size}
  height={size}
  viewBox="0 0 8 8"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
>
  <path
    d="M1 1L7 7M7 1L1 7"
    stroke={color}
    stroke-width="1"
    stroke-linecap="round"
  />
</svg>
