---
interface Props {
  class?: string;
  size?: number;
  color?: string;
}

const { class: className, size = 6, color = "currentColor" } = Astro.props;
---

<svg
  class={className}
  width={size}
  height={size}
  viewBox="0 0 6 7"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
>
  <path
    d="M1 1L5 3.5L1 6"
    stroke={color}
    stroke-width="1.2"
    stroke-linecap="round"
    stroke-linejoin="round"
  />
</svg>
