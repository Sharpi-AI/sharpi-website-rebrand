---
interface Props {
  title: string;
  message: string;
  avatar?: string;
  time: string;
  type?: "message" | "alert" | "update";
  index: number;
}

const { title, message, avatar, time, type = "message", index } = Astro.props;
---

<div
  id={`notification-card-${index}`}
  class="relative w-full bg-white rounded-xl shadow-lg border border-gray-100 p-4 mb-2"
  data-index={index}
  data-type={type}
>
  <div class="flex items-start gap-3">
    {
      avatar ? (
        <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gradient-to-r from-blue-500 to-purple-600 flex items-center justify-center">
          <span class="text-white text-xs font-medium">{avatar}</span>
        </div>
      ) : (
        <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center">
          {type === "message" && (
            <svg
              class="w-4 h-4 text-gray-600"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z"
                clip-rule="evenodd"
              />
            </svg>
          )}
          {type === "alert" && (
            <svg
              class="w-4 h-4 text-orange-600"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                clip-rule="evenodd"
              />
            </svg>
          )}
          {type === "update" && (
            <svg
              class="w-4 h-4 text-green-600"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"
              />
            </svg>
          )}
        </div>
      )
    }

    <div class="flex-1 min-w-0">
      <div class="flex items-center justify-between">
        <h4 class="text-sm font-semibold text-gray-900 truncate">{title}</h4>
        <span class="text-xs text-gray-500 ml-2">{time}</span>
      </div>
      <p class="text-sm text-gray-600 mt-1 line-clamp-2">{message}</p>
    </div>
  </div>
</div>
